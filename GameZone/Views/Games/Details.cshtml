@model Game
@{
    ViewData["Title"] = Model.Name;
}
<div class="card border-success rounded-4 mt-5  overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 p-5 d-flex flex-column justify-content-between">
                <div>
                    <h4 class="text-success fw-bolder">@Model.Name</h4>
                    <span class="badge bg-info fs-5 mb-4">@Model.Category?.Name</span>
                    <p class="fs-5">@Model.Description</p>
                </div>
                <div class="">
                    @foreach(var device in Model.Devices)
                    {
                        <i class="@device.Device.Icon me-2 fs-1 text-secondary"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img class="w-100" src="@($"{FileSettings.ImgPath}/{Model.Cover}")" alt="@Model.Name" />
            </div>
        </div>
    </div>
@*     <h4></h4>
    <h4>@Model.Description</h4>
    <h4>@Model.Category</h4> *@
</div>